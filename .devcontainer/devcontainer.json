{
    "name": "Multistep Transcriber",
    "image": "registry.cluster:5000/devcontainer-python:20251105", // https://github.com/geraldthewes/nomad-docker-images
    "remoteUser": "vscode",  // Non-root user for security; change if needed
    "postCreateCommand": "./setup.sh",
    "containerEnv": {
	"PYTHONPATH": "${containerWorkspaceFolder}"
    },
    "remoteEnv": {
	"HF_TOKEN": "${localEnv:HF_TOKEN}",
	"OLLAMA_HOST": "${localEnv:OLLAMA_HOST}",
	"OPENAI_API_KEY": "${localEnv:OPENAI_API_KEY}",
	"OPENAI_MODEL": "QuantTrio/Qwen3-Coder-30B-A3B-Instruct-AWQ",
	"OPENAI_BASE_URL":"${localEnv:OPENAI_BASE_URL}"
  }
}
