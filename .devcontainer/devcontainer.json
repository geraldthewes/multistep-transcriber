{
  "name": "Python Dev Env",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",  // Or your custom Dockerfile: "build": {"dockerfile": "Dockerfile"}
  "remoteUser": "vscode",  // Non-root user for security; change if needed
  "postCreateCommand": "pip install -r requirements.txt",  // Install deps after container creation
  "containerEnv": {
    "PYTHONPATH": "${containerWorkspaceFolder}"
  }
}
